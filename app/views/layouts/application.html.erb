<!DOCTYPE html>
<html>
<head>
  <title>Nombre Empresa</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



 <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Nombre Empresa</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
        	<ul class="nav navbar-nav">
            <% @sectNav.each do |section| %>
            <li class="dropdown">
               <%= link_to section.name, root_path, :class => "dropdown-toggle",data: {toggle: 'dropdown'}, :role => "button", "aria-haspopup" =>"true", "aria-expanded"=>"false" %>
              <ul class="dropdown-menu">
              </ul>
            </li>
            <% end %>
        	</ul>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
    <%= render 'blocks/jumbotron' %>
    <!-- Main jumbotron for a primary marketing message or call to action -->

    <div class="container">
      <!-- Example row of columns -->
      <% if flash[:notice] %>
      	<div class="alert alert-success"><%= flash[:notice]%> 	</div>
      <%end%>
      <% if flash[:alert] %>
      	<div class="alert alert-danger"><%= flash[:alert]%> 	</div>
      <%end%>
      <%= render 'blocks/block' %>
      <%= yield %>
      <hr>
      <footer>
        <p>&copy; 2016 Company, Inc.</p>
      </footer>
    </div> <!-- /container -->

</body>
</html>
